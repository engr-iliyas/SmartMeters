@page "/meters"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject Smart.Meters.Data.ApplicationDbContext DB
@using Smart.Meters.Model

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="meters/create">Create New</a>
</p>

<QuickGrid Class="table" Items="DB.Meter">
    <PropertyColumn Property="meter => meter.ID" Sortable="true" />
    <PropertyColumn Property="meter => meter.Model" Sortable="true" />
    <PropertyColumn Property="meter => meter.Seal" Sortable="true" />
    <PropertyColumn Property="meter => meter.Type" Sortable="true" />
    <PropertyColumn Property="meter => meter.InstallationDate" Sortable="true" />

    <TemplateColumn Context="meter">
        <div class="dropdown">
            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="@($"meters/edit?id={meter.ID}")">
                    <i class="bx bx-edit-alt me-1"></i> Edit
                </a>

                <a class="dropdown-item" href="@($"meters/details?id={meter.ID}")">
                    <i class="bx bx-detail me-1"></i> Details
                </a>

                <a class="dropdown-item" href="@($"meters/delete?id={meter.ID}")">
                    <i class="bx bx-trash me-1"></i> Delete
                </a>
            </div>
        </div>
    </TemplateColumn>
</QuickGrid>
